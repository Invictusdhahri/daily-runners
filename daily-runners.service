[Unit]
Description=Daily Runners Service
After=network.target

[Service]
Type=simple
User=nodejs
WorkingDirectory=/path/to/your/app
ExecStart=/usr/bin/node /path/to/your/app/dist/index.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=daily-runners
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target 